{
  "rules": {
    "news": {
      ".read": true,
      ".write": false
    },
    "config": {
      ".read": true,
      ".write": false,
      "accommodations": {
        ".read": true,
        ".write": false
      }
    },
    "accommodations": {
      ".read": true,
      ".write": false,
      "$code": {
        ".read": true,
        ".write": false
      }
    },
    "foods": {
      ".read": true,
      ".write": false,
      "$code": {
        ".read": true,
        ".write": false
      }
    },
    "tshirts": {
      ".read": true,
      ".write": false,
      "$tshirt": {
        ".read": true,
        ".write": false
      }
    },
    "teams": {
      ".read": true,
      "$team": {
        ".read": true,
        ".write": "!data.exists() || auth.token.email === data.child('email').val()",
        ".indexOn": [
          "email",
          "name"
        ],
        "name": {
          ".validate": "newData.val().length > 2 && ((data.exists() && data.val() === newData.val()) || !data.exists())"
        },
        "email": {
          ".validate": "newData.val().length > 4 && ((data.exists() && data.val() === newData.val()) || !data.exists())"
        }
      }
    }
  }
}
